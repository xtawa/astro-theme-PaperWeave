---
import type { Language } from '@/i18n/config'
import { getTagPath } from '@/i18n/path'

interface Props {
  tags: string[]
  currentTag?: string
  lang: Language
}

const { tags, currentTag = '', lang } = Astro.props
---

<div class="no-heti flex flex-wrap gap-3">
  {tags.map(tag => (
    <a
      href={getTagPath(tag, lang)}
      class:list={[
        'px-4 py-2 text-sm rounded-full transition-all shadow-sm border font-medium',
        currentTag === tag
          ? 'bg-primary text-white border-primary'
          : 'bg-white dark:bg-gray-800 border-gray-200 dark:border-gray-700 text-gray-600 dark:text-gray-300 hover:border-primary/50 hover:text-primary',
      ]}
    >
      {tag}
    </a>
  ))}
</div>
